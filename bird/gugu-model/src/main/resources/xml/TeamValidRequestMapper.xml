<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- 指定工作空间，要与接口名相同，源代码没有去看，猜测应该是通过"这里的namespace.下边方法的id"来定位方法的 -->
<mapper namespace="com.gugu.gugumodel.mapper.TeamValidRequestMapper">

    <insert id="teamValidRequest" useGeneratedKeys="true" keyProperty="id" parameterType="com.gugu.gugumodel.pojo.entity.TeamValidEntity">
        insert into team_valid_application(team_id,teacher_id,reason,status) values (#{teamId},#{teacherId},#{reason},0)
    </insert>

    <select id="getTeamValidStatus" parameterType="java.lang.Long" resultType="java.lang.Long">
        select status from team_valid_application where team_id=#{arg0}
    </select>

</mapper>